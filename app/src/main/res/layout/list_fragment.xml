<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ListFragment">



    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/new_list"
        android:background="@drawable/rounded_edit_text"
        android:hint="@string/new_list"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:backgroundTint="@color/red"
        android:layout_toEndOf="@id/new_list"
        android:layout_above="@id/listsList"
        android:layout_alignBottom="@id/new_list"
        android:layout_alignParentTop="true"
        />
    <Button
        android:id="@+id/groupsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/groups"
        android:backgroundTint="@color/red"
        android:layout_toStartOf="@id/gpsButton"
        />
    <Button
        android:id="@+id/gpsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/gps"
        android:backgroundTint="@color/red"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/signoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/signout"
        android:layout_toEndOf="@id/gpsButton"
        android:backgroundTint="@color/red"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_list"
        />
</RelativeLayout>